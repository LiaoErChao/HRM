<script type="text/javascript">
        var vm = new Vue({
            el: "#div1",
            data: {
                da: [],
                currenPage: 1,
                Pages: 1,
                Rows: 1
            },
            methods: {
                load: function () {
                    var t = this;
                    $.ajax({
                        url: "/SalaryStandard/query_list",
                        type: "post",
                        data: "currenPage=" + t.currenPage,
                        success: function (msg) {
                            var z = eval("(" + msg + ")");
                            t.da = z.li;
                            t.Rows = z.Pages;
                            t.Pages = z.Rows;
                        }

                    });

                }
            },
            mounted: function () {
                this.load();

            }

        });


</script>
