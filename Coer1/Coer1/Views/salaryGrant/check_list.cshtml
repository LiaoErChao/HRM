    <script type="text/javascript">
        var vm = new Vue({
            el: "#div1",
            data: {
                da: [],
                currentPage: 1,
                rows: "",
                pages:"",
            },
            methods: {
                load: function () {
                    var t = this;
                    $.ajax({
                        url: "/salaryGrant/load/?id="+t.currentPage,
                        tupe: "post",
                        success: function (msg) {
                            var z = eval("(" + msg + ")");
                            t.da = z.li;
                            t.rows = z.Pages;
                            t.pages = z.Rows;
                        }

                    })
                },
                shou: function () {
                    this.currentPage = 1;
                    this.load();
                },
                shan: function () {
                    if (this.currentPage > 1) {
                        this.currentPage = this.currentPage - 1;
                    } else {
                        this.currentPage = 1;
                    }
                    this.load();
                },
                xia: function () {
                    if (this.currentPage < this.pages) {
                        this.currentPage = this.currentPage + 1;
                    } else {
                        this.currentPage = this.pages;
                    }
                    this.load();
                },
                wei: function () {
                    this.currentPage = this.pages;
                    this.load();
                },
                tiao: function () {
                    var t = this;
                    var a = parseInt($("#page").val());
                    if (a <= t.pages) {
                        t.currentPage = a;
                    } else {
                        alert("输入错误，请重新输入");
                        $("#page").val("1");
                        t.currentPage = 1;
                    }
                    t.load();

                },
                

            },
            mounted: function () {
                this.load();
            }

        });

    </script>
